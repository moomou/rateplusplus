<div class="info-card" style="width: auto;">
  <div class="header">
    <a href="{{srcUrl}}">
    <div class="profile pull-left js-profile" style="background-image: url('{{imgURL}}')"></div>
    </a>
    <ul class="meta pull-left">
      <li class="name">
        <a class="muted" href="{{srcUrl}}">
          <span class="title-input js-title">{{name}}</span>
        </a>
      </li>
      <li> 
        <ul class="hash">
          {{{hashTags}}}
        </ul>
      </li>
    </ul>
  </div>
  <hr style="visibility: hidden;">
</div>
